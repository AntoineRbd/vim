syntax on

set nu
set expandtab
set cc=80
set shiftwidth=4
set softtabstop=4
set autoindent
set cindent
set incsearch

set visualbell
set t_vb=

colorscheme desert
colorscheme gruvbox

set scrolloff=5
set laststatus=2
set diffopt+=vertical

set list
set listchars=tab:>─,eol:¬,trail:.,nbsp:¤,extends:>,precedes:<

set fillchars=vert:│

autocmd Filetype make setlocal noexpandtab
